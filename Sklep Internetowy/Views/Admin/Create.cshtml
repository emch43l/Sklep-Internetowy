@model Sklep_Internetowy.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" ></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Images" class="control-label"></label>
                <input asp-for="Images" class="form-control" />
                <span asp-validation-for="Images" class="text-danger"></span>
            </div>
            <div class="form-group">
                 <select asp-for="ProducerId" class="form-control" asp-items=@Model.Producers>
                 </select>
            </div>
            <div class="form-group">
                @foreach(var item in Model.Categories)
                {
                    <div>
                        <input type="checkbox" name="CategoryId" value="@item.Guid.ToString()"/>
                        <span> @item.Name </span>
                    </div>
                }
            </div>
            <div class="form-group">
                <div class="aditional-information-container">

                    <div class="aditional-informations-inputs" id="inputs-container">
                        <input type="text" asp-for="AditionalInformations" class="aditional-information-input" />
                    </div>
                    <div class="aditional-informations-management-section">
                        <button class="add-aditional-information" id="information-remove">Usuń</button>
                        <button class="add-aditional-information" id="information-add">Dodaj</button>
                    </div>

                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Home">Back to List</a>
</div>

@section Scripts {
    <script type="text/javascript">
        const INPUTNAME = "@Html.DisplayNameFor(x => x.AditionalInformations)";
    </script>
    <script src="/js/addProduct.js" type="text/javascript"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
